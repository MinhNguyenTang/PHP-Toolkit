{% extends 'base.html.twig' %}

{% block title %}Ingredients{% endblock %}

{% block body %}

  <div class="container mt-4">
    {% if not ingredients is same as(null) %}

    <h1>My ingredients - Symrecipe</h1>

    <div class="count mt-4">
      <p>There are {{ ingredients.getTotalItemCount }} ingredients.</p>
    </div>

    <a href="{{ path('app_ingredient_new') }}" class="btn btn-primary">
      Add an ingredient
    </a>

    {# read and display just one flash message type #}
    {% for message in app.flashes('success') %}
      <div class="alert alert-dismissible alert-success mt-4">
        {{ message }}
      </div>
    {% endfor %}

    <table class="table table-hover mt-4">
      <thead>
        <tr>
          <th scope="col">ID</th>
          <th scope="col">Ingredient Name</th>
          <th scope="col">Price</th>
          <th scope="col">Creation Date</th>
          <th scope="col">Edition</th>
          <th scope="col">Deletion</th>
        </tr>
      </thead>
      <tbody>
        {% for ingredient in ingredients %}
              <tr>
                <th scope="row"> {{ ingredient.id }}</th>
                <td>{{ ingredient.name }}</td>
                <td>{{ ingredient.price }}</td>
                <td>{{ ingredient.createdAt|date("d/m/Y") }}</td>
                <td><a href="{{ path('app_ingredient_edit', { id : ingredient.id }) }}" class="btn btn-info">Edit</a></td>
                <td><a href="{{ path('app_ingredient_delete', { id : ingredient.id }) }}" onclick="return confirm('Do you really want to delete this item?')" class="btn btn-danger">Delete</a></td>
              </tr>
        {% endfor %}
      </tbody>
    </table>

    <div class="navigation d-flex justify-content-center">
      {{ knp_pagination_render(ingredients) }}
    </div>
    {% else %}
    <p>There is no ingredient.</p>
    {% endif %}
  </div>

<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

{% endblock %}
