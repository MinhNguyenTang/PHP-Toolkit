{% extends "base.html.twig" %}

{% block title %}Home{% endblock %}

{% block body %}

<div class="container">
    <h1 class="text-center mt-4">Welcome to Symrecipe!</h1>

    <h3 class="d-flex justify-content-start flex-wrap mt-4">&nbsp;&nbsp;&nbsp;&nbsp;Shared recipes</h3>

    {% if recipes is null %}
        <p>There is no published recipe yet.</p>
    {% else %}            
    <div class="d-flex justify-content-around flex-wrap mt-4">
        {% for recipe in recipes %}
        <div class="card border-secondary mb-3 mr-5" style="max-width: 20rem;">
            <div class="card-header"><h5>{{ recipe.nameRecipe }}</h5></div>
                <div class="card-body">
                    <p class="card-text">{{ recipe.description|slice(0, 100) ~ '...' }}</p>
                </div>
           </div> 
        {% endfor %}
    </div>
    {% endif %}   
</div>

{% endblock %}