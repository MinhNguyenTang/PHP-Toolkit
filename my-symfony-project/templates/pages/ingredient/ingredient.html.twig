{% extends 'base.html.twig' %}

{% block title %} {{ (app.user is null) ? 'Page not found' : 'Ingredients' }} {% endblock %}

{% block body %}

{% if not app.user %}
  <div class="container mt-5">
    <h1 class="text-center">Unauthorized Access</h1>

    <hr class="divider">

    <div class="container mt-5">
      <p style="text-align: center;">Sorry, your request could not be processed.</p>
      <p style="text-align: center;"><a href="{{ path('app_home') }}">Return</a></p>
    </div>
  </div>

{% else %}

  <div class="container mt-4">
    {% if ingredients is null %}

      <p>There is no ingredient.</p>

    {% else %}   

    <h1>My ingredients - Symrecipe</h1>

    {% for message in app.flashes('success') %}
      <div class="alert alert-dismissible alert-success mt-4">
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        {{ message }}
      </div>
    {% endfor %}

    <div class="container mt-4">
      <div class="d-flex justify-content-between">
        <p>There are {{ ingredients.getTotalItemCount }} ingredients.</p>

        <a href="{{ path('app_ingredient_new') }}" class="btn btn-primary">
          Add an ingredient
        </a>
      </div>
    </div>

    <table class="table table-hover mt-4">
      <thead>
        <tr>
          <th scope="col">ID</th>
          <th scope="col">Ingredient Name</th>
          <th scope="col">Price</th>
          <th scope="col">Creation Date</th>
          <th scope="col">Actions</th>
        </tr>
      </thead>
      <tbody>
        {% for ingredient in ingredients %}
              <tr>
                <th scope="row"> {{ ingredient.id }}</th>
                <td>{{ ingredient.name }}</td>
                <td>{{ ingredient.price|number_format(2) }}â‚¬</td>
                <td>{{ ingredient.createdAt|date("d/m/Y") }}</td>
                <td><a href="{{ path('app_ingredient_edit', { id : ingredient.id }) }}" class="btn btn-info">Edit</a>
                <a href="{{ path('app_ingredient_delete', { id : ingredient.id }) }}" onclick="return confirm('Do you really want to delete this ingredient?')" class="btn btn-danger">Delete</a></td>
              </tr>
        {% endfor %}
      </tbody>
    </table>

    <div class="navigation d-flex justify-content-center">
      {{ knp_pagination_render(ingredients) }}
    </div>
    
    {% endif %}
  </div>

  {% endif %}

{% endblock %}
