{% extends 'base.html.twig' %}

{% block title %}Reset your password{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    <div class="container d-flex justify-content-center align-items-center min-vh-100">
        {{ form_start(requestForm, { 'attr': { 'class': 'col-lg-6 mx-auto shadow-lg p-3 mb-5 bg-white rounded-0' } }) }}
            <h3 class="text-center mt-4">Reset your password</h3>

            <div class="row">
                <div class="form-group">
                    {{ form_label(requestForm.email) }}
                    {{ form_widget(requestForm.email) }}
                    {{ form_errors(requestForm.email) }}
                </div>

                <div class="row">
                    <div class="form-group">
                        <small>
                            Enter your email address, and we will send you a
                            link to reset your password.
                        </small>
                    </div>
                </div>
            </div>
            
            <div class="row">
                <div class="d-flex justify-content-between align-items-center">
                    <p class="float-start"><button class="btn btn-primary mt-4">Send reset password email</button></p>
                    <p class="float-end mt-4"><a class="no-underline" href="{{ path('app_home') }}">Cancel</a></p>
                </div>
            </div>
        {{ form_end(requestForm) }}
    </div>
{% endblock %}
